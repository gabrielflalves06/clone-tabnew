{
  "name": "clone-tabnew",
  "version": "1.0.0",
  "description": "Projeto para treinar programação desenvolvido durante as aulas do Curso.dev",
  "main": "index.js",
  "scripts": {
    "dev": "npm run database:up && next dev",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "database:up": "docker compose -f infra/compose.yaml up -d",
    "database:stop": "docker compose -f infra/compose.yaml stop",
    "database:down": "docker compose -f infra/compose.yaml down",
    "migration:creation": "node-pg-migrate -m infra/migrations create",
    "migration:up": "node-pg-migrate -m infra/migrations --envPath .env.development up"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.4",
    "next": "^13.1.6",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "jest": "^29.6.2",
    "prettier": "^3.6.2"
  }
}
